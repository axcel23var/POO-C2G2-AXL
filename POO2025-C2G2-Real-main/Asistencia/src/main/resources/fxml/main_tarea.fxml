<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="1.7976931348623157E308"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.asistencia.control.TareaController">

    <children>
        <VBox layoutX="14.0" layoutY="14.0"
              maxHeight="1.7976931348623157E308"
              AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="5.0"
              AnchorPane.rightAnchor="5.0"
              AnchorPane.topAnchor="5.0">

            <children>
                <!-- Título y búsqueda -->
                <AnchorPane>
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Gestionar Tareas">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>

                        <Label layoutX="295.0" layoutY="55.0" text="Buscar Tarea" />
                        <TextField fx:id="txtBuscar" layoutX="295.0" layoutY="72.0" />
                        <Button layoutX="460.0" layoutY="72.0" text="Buscar" onAction="#buscarTarea"/>
                    </children>
                </AnchorPane>

                <!-- Formulario y tabla -->
                <AnchorPane maxHeight="1.7976931348623157E308"
                            maxWidth="1.7976931348623157E308">
                    <children>
                        <HBox layoutX="14.0" layoutY="14.0"
                              maxHeight="1.7976931348623157E308"
                              AnchorPane.bottomAnchor="5.0"
                              AnchorPane.leftAnchor="5.0"
                              AnchorPane.rightAnchor="5.0"
                              AnchorPane.topAnchor="5.0">
                            <children>

                                <!-- Formulario -->
                                <GridPane maxHeight="1.7976931348623157E308">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>

                                    <rowConstraints>
                                        <RowConstraints maxHeight="36.0" minHeight="36.0" prefHeight="36.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="36.0" minHeight="36.0" prefHeight="36.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="36.0" minHeight="36.0" prefHeight="36.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="36.0" minHeight="36.0" prefHeight="36.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="36.0" minHeight="36.0" prefHeight="36.0" vgrow="SOMETIMES" />
                                    </rowConstraints>

                                    <children>
                                        <Label alignment="CENTER"
                                               maxWidth="1.7976931348623157E308"
                                               text="Formulario"
                                               GridPane.columnSpan="2147483647">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>

                                        <Label text="Título:" GridPane.rowIndex="1" />
                                        <Label text="Descripción:" GridPane.rowIndex="2" />
                                        <Label text="Estado:" GridPane.rowIndex="3" />

                                        <TextField fx:id="txtTitulo"
                                                   GridPane.columnIndex="1"
                                                   GridPane.columnSpan="3"
                                                   GridPane.rowIndex="1" />

                                        <TextField fx:id="txtDescripcion"
                                                   GridPane.columnIndex="1"
                                                   GridPane.columnSpan="3"
                                                   GridPane.rowIndex="2" />

                                        <ComboBox fx:id="cbxEstado"
                                                  maxWidth="1.7976931348623157E308"
                                                  prefWidth="150.0"
                                                  GridPane.columnIndex="1"
                                                  GridPane.columnSpan="2"
                                                  GridPane.rowIndex="3" />

                                        <Button maxWidth="1.7976931348623157E308"
                                                mnemonicParsing="false"
                                                onAction="#registrarTarea"
                                                text="Guardar"
                                                GridPane.columnIndex="1"
                                                GridPane.rowIndex="4">
                                            <GridPane.margin>
                                                <Insets right="5.0" />
                                            </GridPane.margin>
                                        </Button>

                                        <Button maxWidth="1.7976931348623157E308"
                                                mnemonicParsing="false"
                                                onAction="#limpiarFormulario"
                                                text="Cancelar"
                                                GridPane.columnIndex="2"
                                                GridPane.rowIndex="4">
                                            <GridPane.margin>
                                                <Insets left="5.0" />
                                            </GridPane.margin>
                                        </Button>
                                    </children>
                                </GridPane>

                                <!-- Tabla -->
                                <AnchorPane>
                                    <children>
                                        <TableView fx:id="tableView"
                                                   layoutX="7.0" layoutY="14.0"
                                                   prefWidth="700.0" />
                                    </children>
                                </AnchorPane>

                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
